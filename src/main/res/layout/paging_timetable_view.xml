<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


    <RelativeLayout android:id="@+id/group1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/title"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Week 26, May 2016"
                  android:textAllCaps="true"/>

        <LinearLayout android:layout_height="48dp"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="48dp"
                      android:layout_marginStart="48dp"
                      android:layout_marginEnd="48dp"
                      android:layout_marginRight="48dp"
                      android:orientation="horizontal"
                      android:weightSum="7">

            <Button android:text="31"
                    android:id="@+id/text1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="32"
                    android:id="@+id/text2"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="33"
                    android:id="@+id/text3"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="34"
                    android:id="@+id/text4"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="35"
                    android:id="@+id/text5"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="36"
                    android:id="@+id/text6"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>
            <Button android:text="37"
                    android:id="@+id/text7"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/divider" android:layout_below="@id/group1"/>

    <ScrollView android:id="@+id/scroll_view" 
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group1">

        <com.greasemonk.timetable.SwipingRecyclerView android:id="@+id/recycler_view"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:minHeight="200dp"
        />

    </ScrollView>

    <View style="@style/divider" android:layout_below="@id/scroll_view"/>

    <ProgressBar android:id="@+id/progress_bar"
                 android:indeterminate="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/group1"
                 style="?android:attr/progressBarStyle"
                 android:layout_centerInParent="true"/>


</RelativeLayout>